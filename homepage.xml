<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.csudh.healthapp.csudhhealthapp.HomepageActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/radioButtonVeryUrgent"
        android:layout_alignLeft="@+id/radioButtonImmediate"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/radioButtonVeryUrgent"
        android:layout_alignStart="@+id/radioButtonImmediate"
        android:layout_marginLeft="8sp"
        android:layout_marginRight="8sp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/piechart" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_below="@+id/imageView"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/radioGroupRequestType"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35sp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonImmediate"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:text="Immediate"
                android:textColor="@android:color/background_light"
                android:textSize="17sp"
                android:textStyle="bold"
                android:buttonTint="@color/common_google_signin_btn_text_dark_default"/>

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="130sp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/radioButtonImmediate"
                android:text="Within a day"
                android:textColor="@android:color/background_light"
                android:textSize="17sp"
                android:textStyle="bold"
                android:buttonTint="@color/common_google_signin_btn_text_dark_default"/>

            <RadioButton
                android:id="@+id/radioButtonVeryUrgent"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/radioButton3"
                android:text="Very Urgent"
                android:textColor="@android:color/background_light"
                android:textSize="17sp"
                android:textStyle="bold"
                android:buttonTint="@color/common_google_signin_btn_text_dark_default"/>
        </RadioGroup>

    </LinearLayout>
    <Button
        android:id="@+id/buttonBloodRequired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request"
        android:fontFamily="Arial"
        android:textSize="30sp"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true" />
</android.widget.RelativeLayout>